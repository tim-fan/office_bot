<?xml version="1.0"?>
<robot name="red_robot" xmlns:xacro="http://www.ros.org/wiki/xacro"> 
  <!-- Constants for robot dimensions -->
  <xacro:property name="PI" value="3.1415926535897931"/>

  <!-- Import Rviz colors -->
  <xacro:include filename="$(find red_robot_base)/urdf/materials.xacro" />

  <!-- Base Link -->
  <link name="base_link">
    <collision>
      <origin xyz="-0.15 0 0.1" rpy="0 0 0"/>
      <geometry>
	    <box size=".485 .43 .15"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="-0.15 0 0.1" rpy="0 0 0"/>
      <geometry>
	    <box size=".485 .43 .15"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision name="collision">
      <origin xyz="-0.325 0.0 0.05" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.04625"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin xyz="-0.325 0.0 0.05" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.04625"/>
      </geometry>
    </visual>
    
    <inertial>
       <mass value="20" />
       <origin xyz="-0.08 0 0" rpy="0 0 0"/>
       <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
  </link>

  <link name="left_wheel">
    <collision name="collision">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
         <cylinder  length="0.03" radius="0.0725"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.0725"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1" />
      <origin xyz="0 0.0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
  </link>
  
  <joint type="revolute" name="left_wheel_joint">
    <origin xyz="0 0.15 0.075" rpy="0 0 0"/>
    <child link="left_wheel">left_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100.0"  lower="-5000" upper="5000" />
  </joint> 

  <link name="right_wheel">
    <collision name="collision">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
         <cylinder  length="0.03" radius="0.0725"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.0725"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1" />
      <origin xyz="0 0.0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
  </link>
  
  <joint type="revolute" name="right_wheel_joint">
    <origin xyz="0 -0.15 0.075" rpy="0 0 0"/>
    <child link="right_wheel">right_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100.0"  lower="-5000" upper="5000" />
  </joint>

</robot>

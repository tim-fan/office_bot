<?xml version="1.0"?>

<launch>

  <arg name="world_name" default="worlds/empty.world"/>
  <arg name="publish_localisation_tf" default="true" doc="if true, runs node to publish map-to-odom tf"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/> <!-- world_name is wrt GAZEBO_RESOURCE_PATH environment variable -->
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <include file="$(find office_bot_gazebo)/launch/spawn_office_bot.launch"/>
  
  <node pkg="office_bot_gazebo" type="gazebo_localisation.py" name="location_publisher" if="$(arg publish_localisation_tf)"/>

  <include file="$(find office_bot_base)/launch/cmd_vel_mux.launch"/>


</launch>

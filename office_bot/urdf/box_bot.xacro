<?xml version="1.0"?>
<robot name="box_bot" xmlns:xacro="http://www.ros.org/wiki/xacro"> 
  <!-- Constants for robot dimensions -->
  <xacro:property name="PI" value="3.1415926535897931"/>

  <!-- Import Rviz colors -->
  <xacro:include filename="$(find office_bot)/urdf/materials.xacro" />

  <!-- Base Link -->
  <link name="base_link">
    
    <visual name="box">
      <origin rpy="0 0 0" xyz="-0.18 0 0.185"/>
      <geometry>
        <box size="0.4 0.24 0.23"/>
      </geometry>
      <material name="brown"/>
    </visual>

    <visual name="left_caster">
      <origin rpy="1.5708 0 0" xyz="-0.34500  0.11109 0.035"/>
      <geometry>
        <cylinder length="0.01" radius="0.035"/>
      </geometry>
    </visual>

    <visual name="right_caster">
      <origin rpy="1.5708 0 0" xyz="-0.34500 -0.11109 0.035"/>
      <geometry>
        <cylinder length="0.01" radius="0.035"/>
      </geometry>
    </visual>

    <visual name="neck">
      <origin rpy="0 0 0" xyz="0.06 0 0.0725"/>
      <geometry>
        <box size="0.12 0.025 0.005"/>
      </geometry>
    </visual>

    <visual name="head">
      <origin rpy="0 0 0" xyz="0.12 0 0.085"/>
      <geometry>
        <box size="0.07 0.07 0.03"/>
      </geometry>
    </visual>
  </link>

  <link name="left_wheel_link">
    <collision>
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.01" radius="0.045"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.01" radius="0.045"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <link name="right_wheel_link">
    <collision>
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.01" radius="0.045"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.01" radius="0.045"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <link name="laser">
    <visual>
      <origin xyz="0 0.0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint type="revolute" name="motor_1_joint">
    <origin rpy="0 0 0" xyz="0.0 -0.13 0.045"/>
    <child link="right_wheel_link">right_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100.0"  lower="-5000" upper="5000" />
  </joint>

  <joint type="revolute" name="motor_2_joint">
    <origin rpy="0 0 0" xyz="0.0 0.13 0.045"/>
    <child link="left_wheel_link">left_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100.0"  lower="-5000" upper="5000" />
  </joint> 

  <joint type="fixed" name="laser_to_base_joint">
    <origin rpy="0 0 0" xyz="0.12 0 0.095"/>
    <child link="laser"/>
    <parent link="base_link"/>
  </joint>

</robot>
